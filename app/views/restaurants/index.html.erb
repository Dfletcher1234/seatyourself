<body>

<header>

  <h1>SeatYourself</h1>

</header>

<section ="about">
    <div class="inner_wrapper">
      <h4><b>Make Your Reservations</b></h4>
      <p>Navigate through a fantastic selections of your local city's most popular restaurants. Select a restaurant of your choice, and save time making reservations with the click of a button.</p>
    </div>
  </div>
</section>

<% @restaurants.each do |rest| %>
  <h1><%= link_to rest.name,
  restaurant_path(rest)%></h1>
 <h2><%= rest.address %></h2>
 <p><%= link_to "Restaurant Site", "http://"+rest.url, target: :_blank %></p><hr>
<% end %>


