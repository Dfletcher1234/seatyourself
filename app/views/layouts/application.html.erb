<!DOCTYPE html>
<html>
<head>
  <title>Seatyourself</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>

<%= flash.notice %>

<%= link_to "Restaurants", root_path %>
<p class=“userinfo”>
  <% if current_user %>
    Signed in as <%= current_user.email %><br>
     <%= link_to "Log out", session_path("logout"), :method => :delete %><br>
     <%= link_to "My Reservations", user_path(session[:user_id]) %>
  <% else %>
    <%= link_to "Log in", new_session_path %> or <%= link_to "Sign up", new_user_path %>
  <% end %>
</p>

<%= yield %>








</body>
</html>
